{
  "plugins": [
    "@beyondlint/dependencies",
    {
      "plugin": "@beyondlint/github",
      "options": {
        "token": "${GITHUB_TOKEN}"
      }
    }
  ],
  "gitOptions": {
    "base": "origin/main",
    "head": "HEAD"
  },
  "rules": {
    "@beyondlint/internal-dependency-added": {
      "enabled": true,
      "processingMode": "project",
      "options": {
        "allowList": []
      },
      "actions": {
        "@beyondlint/github-pr-comment": {
          "enabled": true,
          "options": {
            "resolved": "false"
          }
        },
        "@beyondlint/github-create-issue": {
          "enabled": true,
          "options": {
            "linkToPullRequest": true
          }
        }
      }
    }
  }
}
