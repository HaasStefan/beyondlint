{
  "plugins": [
    "@beyondlint/dependencies",
    {
      "plugin": "@beyondlint/github",
      "options": {
        "token": "${GITHUB_TOKEN}"
      }
    }
  ],
  "rules": {
    "@beyondlint/internal-dependency-added": {
      "enabled": true,
      "options": {
        "allowList": [],
        "gitOptions": {
          "base": "main",
          "head": "HEAD"
        }
      },
      "actions": {
        "@beyondlint/github-pr-comment": {
          "enabled": true,
          "forwardMessage": true,
          "forwardResult": false,
          "options": {
            "resolved": "false"
          }
        },
        "@beyondlint/github-create-issue": {
          "enabled": true,
          "forwardMessage": true,
          "forwardResult": false,
          "options": {
            "linkToPullRequest": true
          }
        }
      }
    }
  }
}
